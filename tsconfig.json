{
  "compilerOptions": { 
      "target": "es6", 
      "module": "commonjs", 
      "outDir": "./build", 
      "rootDir": "./src", 
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true, 
      "esModuleInterop": true, 
      "typeRoots": ["./@types", "./src/@types", "@types", "node_modules/@types"], 
      "baseUrl": "./src",
      "paths": {
        "@Modules/*": ["Modules/*"],
        "@Config/*": ["Config/*"],
        "@Shared/*": ["Shared/*"]  
      }
  }
}